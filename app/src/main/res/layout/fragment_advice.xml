<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".advice.AdviceFragment"
    android:background="@color/mainBackgroundColor">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView2"
        android:name="ru.schultetabledima.schultetable.AdBannerFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:text="@string/adviceHeadline"
                style="@style/TextViewHeadline" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/basicStyleView"
                android:text="Таблица Шульте - это таблица со случайно расположенными в ней буквами или числами. Применяется для улучшения концентрации внимания, а так же для развития периферического зрения."
                android:padding="20dp"
                android:background="@drawable/item_background"
                android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:background="@drawable/item_background">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAdvice1"
                style="@style/basicStyleView"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@color/red"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/correct_execution"
                tools:ignore="ContentDescription"
                />

        </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAdvice2"
                style="@style/basicStyleView"
                android:padding="20dp"
                android:background="@drawable/item_background"
                android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:background="@drawable/item_background">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:text="@string/an_important_point" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAdvice3"
                style="@style/basicStyleView" />

        </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>