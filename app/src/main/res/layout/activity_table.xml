<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TableActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/constraintLayout_for_menu"
        android:background="@color/colorButton">

        <TableRow
            android:id="@+id/tablerow_menu_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">


            <ImageButton
                android:id="@+id/image_Button_To_Hide"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:background="@android:drawable/arrow_up_float"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"/>

            <ImageButton
                android:id="@+id/image_button_settings"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="10dp"
                android:background="@android:drawable/ic_menu_preferences"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/image_button_statistics"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginRight="10dp"
                android:background="?attr/actionModePasteDrawable"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_gravity="center"/>

            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:gravity="center"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="20sp"
                android:padding="0dp"/>


        </TableRow>

        <TableRow
            android:id="@+id/tablerowmenu_hide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/image_Button_To_Show"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_gravity="center"
                android:background="@android:drawable/arrow_down_float"/>
        </TableRow>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableRow
        android:id="@+id/TableRowForTable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    </TableRow>
</LinearLayout>