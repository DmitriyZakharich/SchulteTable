<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="basicStyleView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/commonTextSize</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:minHeight">@dimen/customMinHeight</item>

    </style>

    <style name="buttonMainMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/mainTextColor</item>
    </style>

    <style name="TextViewStatistic">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/commonTextSize</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/customMinHeight</item>
    </style>

    <style name="Spinner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/commonTextSize</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:minHeight">@dimen/customMinHeight</item>
        <item name="android:backgroundTint">@color/mainTextColor</item>
        <item name="android:popupBackground">@color/main_background_color</item>
    </style>

    <style name="TextViewSettings">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">@dimen/commonTextSize</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/customMinHeight</item>
    </style>

    <style name="TextViewShort">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/commonTextSize</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/customMinHeight</item>
    </style>

    <style name="TextViewHeadline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/headlineTextSize</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:background">@drawable/item_background</item>
        <item name="android:layout_margin">5dp</item>

    </style>


    <style name="Switch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/commonTextSize</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:minHeight">@dimen/customMinHeight</item>
        <item name="switchMinWidth">@dimen/switchSize</item>
    </style>
    <style name="FilterSwitchThemeGreen" parent="AppTheme">
        <item name="colorAccent">@color/enable</item>
        <item name="colorSwitchThumbNormal">@color/disabled</item>
    </style>


    <style name="ImageButtonNavigationFragment">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorButton</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:minHeight">@dimen/customMinHeight</item>

    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColorPrimary">@color/mainTextColor</item>
        <item name="android:colorAccent">#FFFFFF</item>
    </style>

    <style name="PopupMenuStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:itemBackground">@color/bottom_menu</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabBackground">@drawable/item_background</item>
        <item name="tabIndicatorColor">#000000</item>
        <item name="tabIndicatorHeight">5dp</item>
    </style>

</resources>